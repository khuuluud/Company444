
@model IEnumerable<Department>;

@{

    ViewBag.Title = "Index";
}

<h1>All Department</h1>
<br />

<a asp-asp-controller="Department" asp-action="Create" class="btn btn-info"> Create new department</a>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Code)</th>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.DateOfCreation)</th>
                
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.DateOfCreation</td>
                    <td>
                        <a asp-asp-controller="Department" asp-action="Details" asp-route-id="@department.Id" class="btnav btn-warning">
                            <i class="fas fa-eye"></i> Details
                        </a>

                        <a asp-asp-controller="Department" asp-action="Edit" asp-route-id="@department.Id" class="btnav btn-success">
                            <i class="fas fa-edit"></i> Update
                        </a>
                        <a asp-asp-controller="Department" asp-action="Delete" asp-route-id="@department.Id" class="btnav btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>


                </tr>
            }


        </tbody>
    </table>
}
else
{
    <div class="m-3 alert alert-warning">

        <h3>Thre is no department</h3>

    </div>

}
